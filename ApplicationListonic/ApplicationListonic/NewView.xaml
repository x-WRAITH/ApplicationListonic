<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ApplicationListonic.NewView">
    <StackLayout>

    <ListView x:Name="listMainPage">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <AbsoluteLayout>
                        <Label Text="{Binding ProductName}" FontSize="20" FontAttributes="Bold" />
                        <Label Text="{Binding ProductAmount}" FontSize="20" Margin="100,0,0,0" FontAttributes="Bold" />
                        <Button Text="Del" Clicked="Del_NewMainList" Margin="350,0,0,0" WidthRequest="55"/>
                        <Button Text="Mod" Clicked="Mod_NewMainList" Margin="300,0,0,0" WidthRequest="55"/>

                    </AbsoluteLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

    <AbsoluteLayout HorizontalOptions="Center">
        <Button Text="+" Clicked="Add_NewMainList" Margin="200,0,0,50" CornerRadius="90" WidthRequest="60" HeightRequest="60" Background="rgb(28, 139, 225)"/>
    </AbsoluteLayout>


    </StackLayout>

</ContentPage>